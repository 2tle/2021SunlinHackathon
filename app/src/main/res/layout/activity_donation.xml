<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DonationActivity">
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/doBackBtn"
        android:src="@drawable/ic_back"
        android:background="#00ff0000"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/doBackBtn"
        android:layout_margin="10dp"
        android:id="@+id/doImg" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST"
        app:layout_constraintTop_toBottomOf="@id/doImg"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:id="@+id/doName"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/doName"
        android:layout_margin="10dp"
        android:id="@+id/doExp"
        android:text="재잘재잘"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="기부하러가기"
        android:background="@drawable/rounded_btn"
        app:layout_constraintTop_toBottomOf="@id/doExp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/goDoBtn"/>


</androidx.constraintlayout.widget.ConstraintLayout>