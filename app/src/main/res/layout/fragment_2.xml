<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Fragment2">

    <!-- TODO: Update blank fragment layout -->
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFFFFF"
        android:id="@+id/WaterButton"
        android:background="@drawable/ic_rectangle_30"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/image_1366"
        app:layout_constraintTop_toTopOf="@id/WaterButton"
        app:layout_constraintLeft_toLeftOf="@id/WaterButton"
        app:layout_constraintRight_toLeftOf="@id/waterCnt"
        app:layout_constraintBottom_toBottomOf="@id/WaterButton"
        android:id="@+id/waterImg" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/waterImg"
        app:layout_constraintTop_toTopOf="@id/WaterButton"
        app:layout_constraintRight_toRightOf="@id/WaterButton"
        app:layout_constraintBottom_toBottomOf="@id/WaterButton"
        android:text="10"
        android:id="@+id/waterCnt" />

    <ImageButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_rectangle_30"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageButton>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_group_169"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button"
        app:layout_constraintLeft_toLeftOf="@+id/button"
        app:layout_constraintBottom_toBottomOf="@+id/button">

    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/WaterButton"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="글 혹은 댓글을 작성해 \n물을 얻으세요.물을 \n얻어 식물을 키워보세요."
        android:background="@drawable/group_178"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:visibility="invisible"
        android:id="@+id/helpText"
        />
    <com.dinuscxj.progressbar.CircleProgressBar
        android:id="@+id/cpb_circlebar"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:progress_text_size="50sp"
        app:style="solid_line"
        app:progress_stroke_width="20dp "
        app:progress_stroke_cap="round"
        app:progress_end_color="#FFBB00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/plant"
        android:layout_width="250sp"
        android:layout_height="250sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </ImageView>
    <TextView
        android:id="@+id/ftlite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/plant"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    </TextView>
    <ImageButton
        android:id="@+id/imgbutton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_vector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp">

    </ImageButton>
    <Button
        android:id="@+id/bbbb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="25sp"
        android:text="축하합니다 식물을 성공적으로 \n키우셨습니다!">

    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>